<div>
  <div class="show-container">
    <div class="card-listing-title">
      <div>
        <h2><%= @game.name %></h2>
      </div>
      <div class="card-listing-images">
        <%= image_tag @game.cover, alt: "game cover" %>
        <%= image_tag @game.screenshots, alt: "game screenshot" %>
        <%= image_tag @game.artworks, alt: "game artwork" %>
      </div>
    </div>
    <div class="card-listing-game">

      <div>
        <p><b>Game Rating:</b> <%= (@game.aggregate_rating).round(0) %>/100</p>
        <p><b>Genres:</b> <%= @game.genres %></p>
        <p><b>Platforms:</b> <%= @game.platforms %></p>
        <p><b>Website:</b>  <a href="<%= @game.website %>">link</a></p>
        <p><b>Summary:</b>  <%= @game.summary %></p>
        <%= image_tag("ESRB_Rating_Pending.jpeg", alt: "Everyone 10+")  %>
      </div>
    </div>

  </div>
  <div class="card-listing-seller">
    <div>
      <h2>User Offers</h2>
      <%# <%= @listing.user_id.cla %>
      <div class="card-user">
        <% @game.listings.each do |listing| %>
          <% if listing.user.rating? %>
            <h3><%= listing.user.name %></h3>
          <% else %>
            <h3><%= ['Doug Berkley', 'Matthew Davies', 'Noemi Ashizuka', 'Yann Klein', 'Trouni Tiet', 'Sylvain Pierre'].sample %></h3>
          <% end %>
          <p>rating:
            <% if listing.user.rating? %>
              <h2><%= listing.user.name %></h2>
            <% else %>
              <h2><%= ['Doug Berkley', 'Matthew Davies', 'Noemi Ashizuka', 'Yann Klein', 'Trouni Tiet', 'Sylvain Pierre'].sample %></h2>
            <% end %>
            <div class="booking-card">
            <%# Show rating in stars & show a default rating of 3 stars for new users %>
            <p>rating:</p>
              <% if listing.user.rating? %>
                <% listing.user.rating.times do %>
                  <i class="fas fa-star"></i>
                <% end %>
                <% (5 - listing.user.rating).times do %>
                  <i class="far fa-star"></i>
                <% end %>
              <% else %>
                <% 3.times do %>
                  <i class="fas fa-star"></i>
                <% end %>
                <% 2.times do %>
                  <i class="far fa-star"></i>
                <% end %>
              <% end %>
          </div>

            <%# <p>Price: Â¥<%= (@listing.price).round(1) / day</p> %>
            <div class="card">
              <div>
                <%= render 'listings/form', listing: listing %>
              </div>
            </div>
          </p>
        <% end %>
      </div>
    </p>
  </div>
  </div>
    </div>
  </div>
