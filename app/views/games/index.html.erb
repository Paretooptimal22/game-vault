<div class="search-container">
    <h1 class="page-title">Video Games<h1>
    <%= form_with url: games_path, method: :get, class: "search-items", local: true do %>
    <%= text_field_tag :query, params[:query], placeholder: "Type a keyword", class: 'search-field' %>
    <%= submit_tag "Search", class: 'search-btn' %>
    <% end %>
</div>

<div class="container">
  <ul class="cards list-group list-group-flush row row-cols-3">
    <% @games.each do |game| %>
    <% p game %>
      <li class="list-group-item col-12">
        <div class="card-product">
          <%= image_tag "#{game.cover}" %>
          <div class="card-product-infos">
            <h2><%= game.name %></h2>
            <p> <%= game.genres %></p>
            <p><strong> Rating: <%= (game.aggregate_rating).round(1) %></strong></p>
          </div>
          <%= link_to '', game_path(game) , class: 'card-product-info-link' %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
