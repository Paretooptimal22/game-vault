<div class="container">

  <h1 class="text-center">Video Games</h1>
  <%= form_with url: games_path, method: :get, local: true do %>
    <%= label_tag :query, "Search Listings by Game Genres, Platforms, or Name" %>
    <%= text_field_tag :query, params[:query], placeholder: "Type a keyword", class: "form-control" %>
    <%= submit_tag "Search" %>
  <% end %>

  <ul class="cards list-group list-group-flush row row-cols-3">
    <% @games.each do |game| %>
    <% p game %>
      <li class="list-group-item col-12">
        <div class="card-product">
          <%= image_tag "https:#{game.cover}" %>
          <div class="card-product-infos">
            <h2><%= game.name %></h2>
            <p> <%= game.genres %></p>
            <p><strong> Rating: <%= (game.aggregate_rating).round(1) %></strong></p>
          </div>
          <%= link_to '', game_path(game) , class: 'card-product-info-link' %>
        </div>
      </li>
    <% end %>
  </ul>
</div>
